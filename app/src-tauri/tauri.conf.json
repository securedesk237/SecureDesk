{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SecureDesk",
  "version": "0.1.0",
  "identifier": "com.securedesk.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "height": 680,
        "width": 1000,
        "minHeight": 600,
        "minWidth": 900,
        "resizable": true,
        "title": "SecureDesk",
        "decorations": false,
        "transparent": false,
        "center": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "Copyright 2024 SecureDesk",
    "linux": {
      "deb": {
        "depends": [
          "libx11-6",
          "libxext6",
          "libxtst6",
          "libxrandr2",
          "libssl3 | libssl1.1",
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0"
        ],
        "section": "utils",
        "priority": "optional"
      },
      "appimage": {
        "bundleMediaFramework": true
      },
      "rpm": {
        "release": "1",
        "epoch": 0
      }
    },
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "Privacy-preserving remote desktop with end-to-end encryption. One app for both hosting and connecting.",
    "macOS": {
      "entitlements": "entitlements.plist",
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null,
      "minimumSystemVersion": "10.15",
      "dmg": {
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 },
        "windowSize": { "width": 660, "height": 400 }
      }
    },
    "resources": [],
    "shortDescription": "Secure Remote Desktop",
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": null
    }
  }
}
